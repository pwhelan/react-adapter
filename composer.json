{
    "name": "icicleio/react-adapter",
    "description": "Adapts the event loop and promises of Icicle to interfaces compatible with components built for React.",
    "keywords": [
        "adapter",
        "loop",
        "promise"
    ],
    "homepage": "http://icicle.io",
    "license": "MIT",
    "authors": [
        {
            "name": "Aaron Piotrowski",
            "email": "aaron@icicle.io"
        }
    ],
    "require": {
        "icicleio/icicle": "^2.0",
        "react/event-loop": "^0.4",
        "react/promise": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.6"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Icicle\\ReactAdapter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Icicle\\Tests\\ReactAdapter\\": "tests"
        }
    }
}
